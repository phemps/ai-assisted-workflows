interface NavItem {
  label: string;
  path: string;
  icon?: string;
  requiresAuth?: boolean;
  children?: NavItem[];
}

// Navigation configuration
const navigationItems: NavItem[] = [
  { label: 'Home', path: '/', icon: 'ðŸ ' },
  { label: 'Dashboard', path: '/dashboard', icon: 'ðŸ“Š', requiresAuth: true },
  { label: 'Profile', path: '/profile', icon: 'ðŸ‘¤', requiresAuth: true },
  { label: 'Settings', path: '/settings', icon: 'âš™ï¸', requiresAuth: true },
  { label: 'About', path: '/about', icon: 'â„¹ï¸' },
];
